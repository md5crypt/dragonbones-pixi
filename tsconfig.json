{
	"compilerOptions": {
		"watch": false,
		"sourceMap": false,
		"declaration": true,
        "stripInternal": true,
		"alwaysStrict": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"noUnusedLocals": true,
		"strictNullChecks": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"moduleResolution": "node",
		"target": "es6",
		"module": "es6",
		"outDir": "./lib"
	},
	"include": [
		"src/**/*.ts"
	]
}
